		// TODO Auto-generated method stub
		return 0;
	}

	public RecetaVO leerIgual(int idReceta) {
		// TODO Auto-generated method stub
		return null;
	}

	public RecetaVO leerIgual(String nombreReceta) {
		// TODO Auto-generated method stub
		return null;
	}

	public Set<RecetaVO> leerTodo() {
